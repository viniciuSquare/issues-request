// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Issue {
  id                Int           @id @default(autoincrement())
  description       String
  responsible       User?         @relation(fields: [responsibleUserId], references: [id])
  deadline          DateTime
  isItDone          Boolean       @default(false)
  issueActions      IssueAction[]
  responsibleUserId Int           @default(1)
}

model IssueAction {
  id             Int      @id @default(autoincrement())
  description    String
  // IF !AUTHOR, AUTHOR = RESPONSIBLE
  author         User?    @relation(fields: [userId], references: [id])
  Issue          Issue?   @relation(fields: [issueId], references: [id])
  date           DateTime @updatedAt
  isItResolution Boolean  @default(false)

  issueId Int?
  userId  Int?
}

model User {
  id   Int    @id @default(autoincrement())
  name String
  role String

  Issue       Issue[]
  IssueAction IssueAction[]
}
